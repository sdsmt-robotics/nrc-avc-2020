#define INTERRUPT_PIN 2

int RPM = 0;
int time_mils = 0;
int temp_time = 0;


void read_rpm()
{
  //Increase The RPM Counter By One
  RPM++;
  Serial.print("Interrupt");
  Serial.println(RPM);
}

void setup() 
{
  pinMode(INTERRUPT_PIN, INPUT);
  //Start Serial
  Serial.begin(9600);
  //Create Interrupt That triggers LOW to HIGH
  attachInterrupt(digitalPinToInterrupt(INTERRUPT_PIN), read_rpm, RISING);  
}

void loop() 
{
  time_mils = millis();
  
  //Checks if quarter sec has passed
  if((time_mils - temp_time) > 500)
  {
    temp_time = time_mils;
    Serial.println("Half Sec"); 
    Serial.print("RMP:");
    Serial.println(RPM * 120);
    
    //Resets RPM
    RPM = 0;
  }
}
